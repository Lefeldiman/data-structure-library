/*Aluna: Gabriela Santos de Lima
	Faça um programa que gere um vetor de 100 inteiros aleatórios entre 100 e 999. 
	Listar os elementos do vetor. Calcular e escrever a soma dos elementos do vetor de duas formas: 
	usando uma função Iterativa e usando uma função Recursiva.*/
#include <stdio.h>
#include <stdlib.h>
//protótipos
int SomaInte(int num[],int n);
int SomaRec(int num[], int n);
//Principal
int main(int argc, char *argv[]) {
	int vetor[100],i;
	srand(time(NULL));
	printf("Vetor gerado com 100 inteiros aleatorios entre 100 e 999 : \n\n");
	for(i = 0; i < 100; i ++){
		vetor[i] = rand()% (999 - 100 + 1) + 100;
		printf("Vetor[%2d]: %d\n",i,vetor[i]);
	}
	printf("\n\nCom Funcao Interativa: Soma do Vetor = %d",SomaInte(vetor,100));
	printf("\n\nCom Funcao Recursiva:  Soma do Vetor = %d",SomaRec(vetor,100));
 //Finalização
     printf("\n\nPressione qualquer tecla para TERMINAR o programa ... ");
     getch();     return 0;   
}

int SomaInte(int num[], int n){
	int soma = 0,i;
	for(i = 0; i < n; i++)
		soma += num[i];
	return soma;
}

int SomaRec(int num[], int n){
	if(n==1)
	       return ( num[0] );
	else
           return (num[n-1] + SomaRec(num,n-1));
}
